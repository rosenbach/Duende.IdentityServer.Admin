
@using Microsoft.AspNetCore.Mvc.Localization
@using Skoruba.Duende.IdentityServer.Admin.BusinessLogic.Shared.Dtos.Common
@using Skoruba.Duende.IdentityServer.Admin.UI.Configuration.Constants
@model Skoruba.Duende.IdentityServer.Admin.BusinessLogic.Dtos.Configuration.ClientsDto
@inject IViewLocalizer Localizer

@{
	ViewBag.Title = Localizer["PageTitle"];
	Layout = "_Layout";
}

<div class="row">
	<div class="col-12 text-center mt-1 mb-1">
		<h2><span class="oi oi-monitor" title="Clients" aria-hidden="true"></span> @Localizer["PageTitle"]</h2>
	</div>

	<div class="col-12">
		<a asp-area="@CommonConsts.AdminUIArea" asp-action="Client" class="btn btn-outline-primary mb-3"><span class="oi oi-plus"></span> @Localizer["ButtonAddNewClient"]</a>
		<button asp-area="@CommonConsts.AdminUIArea" id="export-clients-button" class="btn btn-outline-secondary mb-3"><span class="oi oi-share-boxed"></span> @Localizer["ButtonExportSelectedClients"]</button>
	</div>
	

	<div class="col-12">
		@await Html.PartialAsync("Common/Search", new Search() { Action = "Clients", Controller = "Configuration" })
	</div>
</div>
<div class="row">
	<div class="col-12">
		<div class="table-responsive">
			<table class="table table-striped">
				<thead>
					<tr>
						<th class="checkboxContainer">
								<input type="checkbox" class="checkbox" id="toggleAllCheckbox">
						</th>
						<th></th>
						<th>@Localizer["TableClientName"]</th>
						<th>@Localizer["TableClientId"]</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var client in Model.Clients)
					{
						<tr>
							<th class="checkboxContainer">
								<input type="checkbox" id="checkbox_@client.Id" value="@client.Id" />
							</th>
							<td>
								<a asp-area="@CommonConsts.AdminUIArea" class="btn btn-primary" asp-action="Client" asp-route-id="@client.Id">@Localizer["TableButtonEdit"]</a>
							</td>
							<td>@client.ClientName</td>
							<td><code>@client.ClientId</code></td>
							<td>
								<a asp-area="@CommonConsts.AdminUIArea" class="btn btn-danger" asp-action="ClientDelete" asp-route-id="@client.Id"><span class="oi oi-trash"></span></a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-12">
		@await Html.PartialAsync("Common/Pager", new Pager { Action = "Clients", PageSize = Model.PageSize, TotalCount = Model.TotalCount, Search = ViewBag.Search, EnableSearch = true })
	</div>
</div>